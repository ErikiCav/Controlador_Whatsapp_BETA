<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextTextApiLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="408dp"
        android:ems="199"
        android:hint="@string/informe_o_link_de_sua_api"
        android:inputType="none|textNoSuggestions|text"
        android:minHeight="48dp"
        android:onClick="gerenciamentoApiLink"
        android:text="@string/apilink"
        android:textColorHint="#546E7A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPacotesPermitidos"
        app:layout_constraintVertical_bias="0.0"
        android:autofillHints="" />

    <Button
        android:id="@+id/botaoPermitirUsoNotificacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="-1dp"
        android:layout_marginBottom="354dp"
        android:onClick="botaoAtalhoPermissaoNotificaticacao"
        android:text="@string/clique_aqui_para_permitir_o_acesso_notifica_es"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextApiLink"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editTextTextPacotesPermitidos"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_marginTop="72dp"
        android:layout_marginBottom="600dp"
        android:autofillHints=""
        android:ems="199"
        android:hint="@string/informe_o_pacote_de_aplicativos_permitidos"
        android:inputType="none|text"
        android:minHeight="48dp"
        android:onClick="gerenciamentoPacotes"
        android:text="@string/pacotespermitidos"
        android:textColorHint="#546E7A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/pacotespermitidos" />

    <Button
        android:id="@+id/permitirResponder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="281dp"
        android:onClick="gerenciamentoPermissaoResponder"
        android:text="@string/permitido_responder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botaoPermitirUsoNotificacao"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>